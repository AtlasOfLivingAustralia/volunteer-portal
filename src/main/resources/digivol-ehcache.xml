<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107' xmlns:eg="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.2.xsd
            http://www.ehcache.org/v3/jsr107 https://www.ehcache.org/schema/ehcache-107-ext-3.2.xsd">
    <persistence directory="${java.io.tmpdir}"/>

    <cache-template name="default">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="minutes">120</tti>
        </expiry>
        <resources>
            <heap>10000</heap>
        </resources>
    </cache-template>

    <cache alias="UserHasValidator">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>5000</heap>
        </resources>
    </cache>

    <cache alias="UserHasCasRole">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap>5000</heap>
        </resources>
    </cache>

    <cache alias="userDetailsCache">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="userDetailsByIdCache">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap>100</heap>
        </resources>
    </cache>

    <cache alias="geoip">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="MainVolunteerStats">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="MainVolunteerContribution">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="StatsTranscriptionTime">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="StatsHourlyContribution">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="getImageMetaData">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">2</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="getImageMetaDataFromFile">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="findMaxSequenceNumber">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="days">1</tti>
        </expiry>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

</config>
